@page
@model WebCarFist.Areas.Admin.Pages.EditProductModel
@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
<div class="card-body">
    <form method="post" asp-page="editproduct" enctype="multipart/form-data">
        <div class="form-group">
            <label class="small mb-1 text-center font-weight-bold">Edit Product</label>

        </div>
        <div class="form-group w-25">
            <label class="small mb-1">Name</label>
            <input class="form-control py-4" type="text" asp-for="@Model.product.Name" />
        </div>

        <div class="form-group w-25">
            <label for="heard">Brand:</label>
            <select id="heard" class="form-control" required="" asp-for="@Model.product.CategoryId">
                @foreach (var category in Model.categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="custom-file w-25">
            <input type="file" class="custom-file-input" asp-for="@Model.product.Photo" name="product" id="customFile">
            <label class="custom-file-label"  for="Image"></label>
            <input id="submit" type="submit" value="Upload file..." />
        </div>
        <div class="form-group w-25">
            <label class="small mb-1">Quantity</label>
            <input class="form-control py-4" type="number" value="1" asp-for="@Model.product.Quantity" />
        </div>
        <div class="form-group">
            <label class="small mb-1">Description</label>
            <!--<input class="form-control py-4" type="text"  />-->
            <div class="col-md-10" height="100">
                <textarea asp-for="@Model.product.Description">@Model.product.Description</textarea>
            </div>
        </div>
        <!--<div class="form-check">
            <input class="form-check-input" type="checkbox" name="exampleRadios" asp-for="@Model.product.Status" id="exampleRadios1" value="Chính Hãng" checked>
            <label class="form-check-label" for="exampleRadios1">
               Chình hãng
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="exampleRadios" asp-for="@Model.product.Status" id="exampleRadios1" value="Nhập khẩu" checked>
            <label class="form-check-label" for="exampleRadios1">

            </label>
        </div>-->

        <div class="form-group w-25">
            <label class="small mb-1">Price</label>
            <input class="form-control py-4" value="1" type="text" asp-for="@Model.product.Price" />
        </div>


        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">

            <button class="btn btn-primary" type="submit">Save</button>
            <input type="hidden" asp-for="@Model.product.Id" />

        </div>

    </form>
</div>