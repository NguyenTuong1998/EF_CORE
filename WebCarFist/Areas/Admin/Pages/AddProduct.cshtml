@page
@model WebCarFist.Areas.Admin.Pages.AddProductModel
@using WebCarFist.Models
@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
<div class="card-body">
    <form method="post" asp-page="addproduct" enctype="multipart/form-data">
        <div class="form-group">
            <label class="small mb-1 text-center font-weight-bold">Create Product</label>

        </div>
        <div class="form-group w-25">
            <label class="small mb-1">Name</label>
            <input class="form-control py-4" type="text" asp-for="@Model.product.Name" />
        </div>

        <div class="form-group w-25">
            <label for="heard">Brand:</label>
            <select id="heard" class="form-control" required="" asp-for="@Model.product.CategoryId">
                @foreach (var category in Model.categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="custom-file w-25">
            <label class="small mb-3 " >Images</label>
            <input type="file" name="fileupload" asp-for="@Model.product.Photo"  >
           
               
            
        </div>
        <div class="form-group w-25">
            <label class="small mt-3">Quantity</label>
            <input class="form-control py-4" type="number" value="1" asp-for="@Model.product.Quantity" />
        </div>
        <div class="form-group">
            <label class="small mb-1">Description</label>
            <!--<input class="form-control py-4" type="text"  />-->
            <div class="col-md-10" height="100">
                <textarea asp-for="@Model.product.Description"></textarea>
            </div>
        </div>
