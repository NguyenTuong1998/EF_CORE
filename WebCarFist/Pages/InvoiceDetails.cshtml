@page
@model WebCarFist.Pages.InvoiceDetailsModel
@using WebCarFist.Models
@{
    ViewData["Title"] = "InvoiceDetails";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="breadcrumb-wrap">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="index">Home</a></li>
            <li class="breadcrumb-item active">Invoice Details</li>

        </ul>
    </div>
</div>
<div class="checkout">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="checkout-inner">
                    <div class="billing-address">
                        <h2>Invoice Details</h2>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Id</label>
                                <input class="form-control" type="text" placeholder="@Model.invoice.Account.Id">
                            </div>
                            <div class="col-md-12">
                                <label>UserName</label>
                                <input class="form-control" type="text" placeholder="@Model.invoice.Account.UserName">

                            </div>
                            <div class="col-md-12">
                                <label>Full Name</label>
                                <input class="form-control" type="text" placeholder="@Model.invoice.Account.FullName">

                            </div>
                            <div class="col-md-12">
                                <label>Address</label>
                                <input class="form-control" type="text" placeholder="@Model.invoice.Account.Address">
                            </div>
                            <div class="col-md-12">
                                <label>Phone</label>
                                <input class="form-control" type="text" placeholder="@Model.invoice.Account.Phone">
                            </div>
                            <div class="col-md-12">
                                <label>Email</label>
                                <input class="form-control" type="text" placeholder="@Model.invoice.Account.Email"
                                       name="@Model.invoice.Account.Email">
                            </div>
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="cart-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-page-inner">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>
                                            Quantity
                                        </th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody class="align-middle">
                                    @foreach (var invoiceDetails in Model.invoice.InvoiceDetails)
                                    {
                                        <tr>
                                            <td>
                                                <div class="img">
                                                    <img src="~/product/@invoiceDetails.Product.Photo" alt="Image">
                                                    <p>@invoiceDetails.Product.Name</p>
                                                </div>
                                            </td>
                                            <td>$@invoiceDetails.Product.Price</td>
                                            <td>@invoiceDetails.Product.Quantity</td>
                                            <td>$@(invoiceDetails.Product.Price * invoiceDetails.Product.Quantity )</td>
                                        </tr>
                                    }
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>Total Amount: $@Model.Total</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>